<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtSongName"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Test text"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btnCloseNotif"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_close_white_24px"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnPrevNotif"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_skip_previous_white_24px"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/btnPlayNotif"
                    android:layout_width="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_play_arrow_white_24px"
                    android:layout_height="50dp" />

                <Button
                    android:id="@+id/btnNextNotif"
                    android:layout_width="50dp"
                    android:layout_margin="5dp"
                    android:layout_height="50dp"
                    android:background="@drawable/ic_skip_next_white_24px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>