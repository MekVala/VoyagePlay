<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mektech.voyageplay.voyageplay.PlayerActivity">

    <ImageView
        android:id="@+id/albumArt"
        android:layout_weight="3"
        android:layout_width="200dp"
        android:contentDescription="Music art"
        android:src="@mipmap/ic_launcher"
        android:layout_height="200dp" />

    <SeekBar
        android:id="@+id/seekMusicProgress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:progressTint="@color/colorPrimaryDark"
        android:secondaryProgressTint="@color/colorPrimary"
        android:thumbTint="#ff0000"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text="00:00"
            android:id="@+id/txtCurDuration"
            android:layout_width="wrap_content"
            android:layout_marginRight="2.5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="|"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textTotalDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.5dp"
            android:text="00:00" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_skip_previous_black_24dp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/btnPlayPause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_pause_circle_outline_black_24dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_skip_next_black_24dp" />
    </LinearLayout>
</LinearLayout>
